<p id="notice"><%= notice %></p>

<h1>Library Members</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @library_members.each do |library_member| %>
      <tr>
        <td><%= library_member.email %></td>
        <td><%= library_member.name %></td>
        <td><%= library_member.password %></td>
        <td><%= link_to 'Show', library_member %></td>
        <td><%= link_to 'Edit', edit_library_member_path(library_member) %></td>
        <td><%= link_to 'Destroy', library_member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Library Member', new_library_member_path %>
